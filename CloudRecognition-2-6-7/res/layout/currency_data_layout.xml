<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/semi_transparent_black"
    android:padding="10dp" >

    <TextView
        android:id="@+id/currency_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Name"
        android:textColor="@color/holo_light_blue"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/graph_currency"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/currency_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/content_description_background"
        android:scaleType="fitXY"
        android:src="@drawable/wiw_guy" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/graph_currency"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conversion: "
            android:textColor="#FF8888"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/currency_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0.80"
            android:textColor="#FF8888"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>
